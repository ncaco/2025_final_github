{
  "name": "stock-dividend-desktop-calculator",
  "version": "0.1.0",
  "description": "Electron 기반 거치식/적립식 주가·배당 계산기 (가벼운 포트폴리오 관리 포함)",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite --config vite.renderer.config.ts",
    "dev:electron": "ts-node src/main/main.ts",
    "build": "vite build --config vite.renderer.config.ts && tsc",
    "lint": "echo \"no linter configured\""
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "recharts": "^2.12.7",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "@types/fs-extra": "^11.0.4"
  }
}


