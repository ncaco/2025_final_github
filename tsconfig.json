{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@models/*": ["src/renderer/models/*"],
      "@services/*": ["src/renderer/services/*"],
      "@components/*": ["src/renderer/components/*"]
    },
    "outDir": "dist"
  },
  "include": ["src"]
}


